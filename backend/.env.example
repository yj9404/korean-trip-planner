# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Admin SDK Configuration
# Option 1 (Recommended for Production/CI/CD): Set Firebase credentials as JSON string
# FIREBASE_CREDENTIALS_JSON='{"type":"service_account","project_id":"your-project",...}'

# Option 2 (Recommended for Local Development): Set path to credentials file
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Note: Only one of the above is needed. FIREBASE_CREDENTIALS_JSON takes precedence.

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Settings
API_VERSION=v1
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000
